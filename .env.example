# Mistral AI API Keys
MISTRAL_API_KEY=your_mistral_api_key_here

# Data and database paths
DATA_DIR=./data
SQLITE_PATH=./catchup.sqlite

# VAD (Voice Activity Detection) settings
LONG_SILENCE_SEC=1.6
KEEP_SILENCE_SEC=0.35
PADDING_SEC=0.2

# Transcription chunking
CHUNK_MINUTES=15
CHUNK_OVERLAP_SEC=6

# Server settings
HOST=0.0.0.0
PORT=8000

# Client mode (true = fake clients for testing, false = real clients for production)
USE_FAKE_CLIENTS=true
